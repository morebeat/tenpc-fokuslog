# Docker Environment Configuration
# Copy to .env and modify as needed for local development

# Application Settings
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_TIMEZONE=Europe/Berlin
APP_PORT=8000
APP_SSL_PORT=8443

# Database Configuration
DB_HOST=mysql
DB_PORT=3306
DB_NAME=fokuslog
DB_USER=fokuslog_user
DB_PASS=fokuslog_password
DB_ROOT_PASSWORD=root_password
DB_CHARSET=utf8mb4

# Session Configuration
SESSION_DRIVER=files
SESSION_LIFETIME=120
SESSION_SECURE=false
SESSION_HTTPONLY=true
SESSION_SAMESITE=Lax

# Logging
LOG_CHANNEL=single
LOG_LEVEL=debug
LOG_FILE=/var/www/html/logs/app.log

# PHP Settings
PHP_TIMEZONE=Europe/Berlin
PHP_MEMORY_LIMIT=256M
PHP_UPLOAD_MAX_SIZE=100M

# Email Configuration (Optional)
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_ADDRESS=noreply@fokuslog.local
MAIL_FROM_NAME="FokusLog"

# Security & Cookies
COOKIE_DOMAIN=localhost
COOKIE_SECURE=false
CORS_ORIGINS=http://localhost:8000,http://localhost:3000

# PhpMyAdmin
PMA_PORT=8080
PMA_URL=http://localhost:8080

# Feature Flags (Development)
NOTIFICATIONS_ENABLED=true
API_EXPORT_ENABLED=true
ADVANCED_REPORTS_ENABLED=true
DEBUG_MODE=true
