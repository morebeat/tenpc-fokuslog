# FokusLog Environment Configuration - EXAMPLE
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ================================================
# DATABASE CONFIGURATION
# ================================================

# Database host and port
DB_HOST=localhost:3306

# Database name
DB_NAME=fokuslog

# Database user
DB_USER=fokuslog_user

# Database password (CHANGE THIS!)
DB_PASS=change_this_password_12345

# Database character set
DB_CHARSET=utf8mb4

# ================================================
# APPLICATION SETTINGS
# ================================================

# Application environment: development, qa, production
APP_ENV=development

# Application debug mode (true/false)
APP_DEBUG=true

# Base URL for the application
APP_URL=http://localhost

# Application timezone
APP_TIMEZONE=Europe/Berlin

# ================================================
# SESSION CONFIGURATION
# ================================================

# Session name (PHPSESSID by default)
SESSION_NAME=PHPSESSID

# Session lifetime in seconds (0 = until browser closes)
SESSION_LIFETIME=0

# Session secure flag (https only)
# Set to true in production
SESSION_SECURE=false

# Session HTTP only flag
SESSION_HTTPONLY=true

# Session SameSite attribute (Strict, Lax, None)
SESSION_SAMESITE=Strict

# ================================================
# SECURITY & COOKIES
# ================================================

# CORS allowed origins (comma-separated)
# For development: http://localhost
# For production: https://example.com
CORS_ORIGINS=http://localhost

# Cookie domain (leave empty for current domain)
COOKIE_DOMAIN=

# ================================================
# EMAIL CONFIGURATION (Optional)
# ================================================

# SMTP server host
MAIL_HOST=smtp.example.com

# SMTP port (587 for TLS, 465 for SSL)
MAIL_PORT=587

# SMTP username
MAIL_USERNAME=noreply@example.com

# SMTP password
MAIL_PASSWORD=your_email_password

# From address for emails
MAIL_FROM_ADDRESS=noreply@fokuslog.example.com

# From name
MAIL_FROM_NAME=FokusLog

# ================================================
# LOGGING
# ================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path (relative to project root)
LOG_FILE=logs/app.log

# Maximum log file size in MB before rotation
LOG_MAX_SIZE=10

# ================================================
# BACKUP CONFIGURATION
# ================================================

# Backup directory (relative to project root)
BACKUP_DIR=backups/

# Daily backup time (HH:MM format, 24-hour)
BACKUP_TIME=02:00

# Backup retention days
BACKUP_RETENTION_DAYS=30

# ================================================
# ENVIRONMENT-SPECIFIC SETTINGS
# ================================================

# DEVELOPMENT settings (uncomment for local development)
# APP_ENV=development
# APP_DEBUG=true
# DB_HOST=localhost:3306
# SESSION_SECURE=false

# QA settings (uncomment for QA environment)
# APP_ENV=qa
# APP_DEBUG=false
# DB_HOST=qa-db.internal:3306
# SESSION_SECURE=true

# PRODUCTION settings (uncomment for production)
# APP_ENV=production
# APP_DEBUG=false
# DB_HOST=prod-db.internal:3306
# SESSION_SECURE=true
# CORS_ORIGINS=https://fokuslog.example.com

# ================================================
# OPTIONAL: EXTERNAL SERVICES
# ================================================

# Monitoring service API key (if using monitoring)
# MONITORING_API_KEY=your_api_key

# Error reporting service (e.g., Sentry)
# ERROR_REPORTING_DSN=https://key@sentry.io/project

# Analytics (privacy-first option)
# ANALYTICS_ENABLED=false

# ================================================
# OPTIONAL: FEATURE FLAGS
# ================================================

# Enable/disable features
FEATURE_EMAIL_NOTIFICATIONS=false
FEATURE_API_EXPORT=true
FEATURE_ADVANCED_REPORTS=true

# ================================================
# NOTES
# ================================================
# 1. This file is an example (.env.example)
# 2. Create .env with your actual values
# 3. .env is in .gitignore - it will NOT be committed
# 4. Each environment has its own .env file
# 5. Never share secrets via version control
# 6. Rotate secrets regularly in production
# 7. Use strong, unique passwords for databases
# 8. Enable HTTPS (SESSION_SECURE=true) in production
# 9. Keep APP_DEBUG=false in production
# 10. Document any custom configuration
